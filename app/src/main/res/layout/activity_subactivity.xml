<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subactivity"
    android:orientation="vertical"
    android:weightSum="120">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="40sp"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/result_text"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#070606"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="AC"
            android:textSize="30dp"
            android:id="@+id/all_clear_button"
            android:onClick="buttonClick"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="CE"
            android:textSize="30dp"
            android:id="@+id/clear_entry_button"
            android:onClick="buttonClick"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="BS"
            android:textSize="30dp"
            android:id="@+id/backsapce_button"
            android:onClick="buttonClick"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="/"
            android:textSize="30dp"
            android:backgroundTint="#D3A9A9"
            android:id="@+id/division_button"
            android:onClick="buttonClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="7"
            android:textSize="30dp"
            android:id="@+id/num7_button"
            android:onClick="buttonClick"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="8"
            android:textSize="30dp"
            android:id="@+id/num8_button"
            android:onClick="buttonClick"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="9"
            android:textSize="30dp"
            android:id="@+id/num9_button"
            android:onClick="buttonClick"/>

        <Button
            android:id="@+id/multiply_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:backgroundTint="#D3A9A9"
            android:text="*"
            android:textSize="30dp"
            android:onClick="buttonClick"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="20"
    android:orientation="horizontal"
    android:weightSum="100">

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="4"
        android:textSize="30dp"
        android:id="@+id/num4_button"
        android:onClick="buttonClick"/>

    <Button
        android:id="@+id/num5_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="5"
        android:textSize="30dp"
        android:onClick="buttonClick"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="6"
        android:textSize="30dp"
        android:id="@+id/num6_button"
        android:onClick="buttonClick"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="-"
        android:textSize="30dp"
        android:backgroundTint="#D3A9A9"
        android:id="@+id/substract_button"
        android:onClick="buttonClick"/>
</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="20"
    android:orientation="horizontal"
    android:weightSum="100">

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="1"
        android:textSize="30dp"
        android:id="@+id/num1_button"
        android:onClick="buttonClick"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="2"
        android:textSize="30dp"
        android:id="@+id/num2_button"
        android:onClick="buttonClick"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="3"
        android:textSize="30dp"
        android:id="@+id/num3_button"
        android:onClick="buttonClick"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="+"
        android:textSize="30dp"
        android:backgroundTint="#D3A9A9"
        android:id="@+id/plus_button"
        android:onClick="buttonClick"/>
</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="20"
    android:orientation="horizontal"
    android:weightSum="100">

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:text="0"
        android:textSize="30dp"
        android:id="@+id/num0_button"
        android:onClick="buttonClick"/>


    <Button
        android:id="@+id/decimal_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="."
        android:textSize="30dp"
        android:onClick="buttonClick"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:text="="
        android:textSize="30dp"
        android:backgroundTint="#D3A9A9"
        android:id="@+id/result_button"
        android:onClick="buttonClick"/>
</LinearLayout>
</LinearLayout>