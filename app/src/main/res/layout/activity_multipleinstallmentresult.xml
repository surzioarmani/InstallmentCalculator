<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linear"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:text="할부 납부 결과표"
        android:fontFamily="@font/mapo"
        android:background="#DDF7C3"
        android:textColor="#131212"
        android:textSize="23dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:text="1번째 제품"
        android:fontFamily="@font/mapo"
        android:background="#F5CDC1"
        android:textColor="#131212"
        android:textSize="23dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="100">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="총회차"
            android:fontFamily="@font/mapo"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#131212"
            android:background="#E7DBFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@color/color2"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:text="총할부\n상환액"
            android:textColor="#131212"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="총할부원금\n상환액"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#131212"
            android:fontFamily="@font/mapo"
            android:background="@color/color2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="총할부\n이자"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:textColor="#131212"
            android:background="@color/color2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="총상환액\n비교"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:textColor="#131212"
            android:background="@color/color2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:background="@color/color1"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/totalmonth1"
            android:layout_weight="20"
            android:text="총회차"
            android:fontFamily="@font/mapo"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#131212" />

        <TextView
            android:id="@+id/total_inst_M1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:text="0원"
            android:textColor="#131212"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/total_M1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="0원"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#131212"
            android:fontFamily="@font/mapo" />

        <TextView
            android:id="@+id/total_feem1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="0원"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:textColor="#131212"/>

        <TextView
            android:id="@+id/diff1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="비교"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:textColor="#131212"/>


        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#F5CDC1"
        android:fontFamily="@font/mapo"
        android:gravity="center"
        android:text="2번째 제품"
        android:textColor="#131212"
        android:textSize="23dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="100">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="총회차"
            android:fontFamily="@font/mapo"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#131212"
            android:background="#E7DBFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@color/color2"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:text="총할부\n상환액"
            android:textColor="#131212"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="총할부원금\n상환액"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#131212"
            android:fontFamily="@font/mapo"
            android:background="@color/color2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="총할부\n이자"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:textColor="#131212"
            android:background="@color/color2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="총상환액\n비교"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:textColor="#131212"
            android:background="@color/color2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:background="@color/color1"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/totalmonth2"
            android:layout_weight="20"
            android:text="총회차"
            android:fontFamily="@font/mapo"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#131212" />

        <TextView
            android:id="@+id/total_inst_M2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:text="0원"
            android:textColor="#131212"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/total_M2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="0원"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#131212"
            android:fontFamily="@font/mapo" />

        <TextView
            android:id="@+id/total_feem2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="0원"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:textColor="#131212"/>

        <TextView
            android:id="@+id/diff2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="비교"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:textColor="#131212"/>
    </LinearLayout>
</LinearLayout>








