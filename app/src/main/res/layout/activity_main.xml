<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="120">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="할부계산기"
            android:fontFamily="@font/mapo"
            android:textSize="40sp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/appname"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#070606"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="사용법"
            android:fontFamily="@font/mapo"
            android:textSize="20dp"
            android:id="@+id/how_button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="일반\n 계산기"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:id="@+id/calculator_button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="할부 \n 계산기"
            android:textSize="20dp"
            android:fontFamily="@font/mapo"
            android:id="@+id/installment_button" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="카드\n할부정보"
            android:textSize="18dp"
            android:fontFamily="@font/mapo"
            android:backgroundTint="#D3A9A9"
            android:id="@+id/cardInfo" />
    </LinearLayout>
</LinearLayout>